#/bin/bash

arraytest[0]='test' || (echo 'ERROR: arrays not supported by bash version'; exit 0)

[ `whoami` != 'root' ] && exec sudo env PATH=$PATH $0 $@

install-packages apache2 mariadb-server php php-cli php-mysql php-bcmath php-xml php-zip php-curl php-mbstring php-gd php-tidy php-intl php-opcache php-soap php-imap php-ldap php-common php-redis php-snmp php-json php-mysqli php-xml libapache2-mod-php unzip || exit

systemctl enable apache2
systemctl start apache2

systemctl enable mariadb
systemctl start mariadb

echo "SuiteCRM Installation Tool"
echo ""

SERVER="suite.stg.net"
DOWNLOAD="https://suitecrm.com/download/144/suite85/563563/suitecrm-8-5-0.zip"

DEST="/var/www/$SERVER"

SQLDB=$(echo "$SERVER" |sed 's/./_/g')
SQLUSER="$SQLDB_user"
SQLPASS="bogus4321"

if [ -d "$DEST" ]
then
	echo "Error: $DEST already exists"
	exit 1
fi

mkdir -p "$DEST"

if [ ! -d "$DEST" ]
then
	echo "Error: could not create $DEST"
	exit 1
fi

cd "$DEST"
	echo "Downloading..."
	wget -O /tmp/suite-install.zip $DOWNLOAD
	echo "Extracting..."
	unzip /tmp/suite-install.zip 

	find . -type d -not -perm 2755 -exec chmod -v 755 {} \;
	find . -type f -not -perm 0644 -exec chmod -v 644 {} \;
	find . ! -user www-data -exec chown -v www-data:www-data {} \;
	chmod +x bin/console


echo "CREATE DATABASE $SQLDB; CREATE USER '$SQLUSER'@'localhost' IDENTIFIED BY '$SQLPASS'; GRANT ALL PRIVILEGES ON $SQLDB.* TO '$SQLUSER'@'localhost'; FLUSH PRIVILEGES;" | mysql -u root -p || exit


LOGDIR="${APACHE_LOG_DIR"
cat >/etc/apache2/sites-available/$SERVER.conf <<END
<VirtualHost *:80>
  ServerAdmin admin@$SERVER
  ServerName  $SERVER
  DocumentRoot $DEST/public
  <Directory $DEST/public>
    AllowOverride All
    Require all granted
  </Directory>
  ErrorLog $LOGDIR/$SERVER_error.log
  CustomLog $LOGDIR/$SERVER_access.log combined
</VirtualHost>
END

sed -i 's/upload_max_filesize.*$/upload_max_filesize = 64M/' /etc/php/*/apache2/php.ini

a2enmod rewrite
a2ensite $SERVER.conf
a2dissite 000-default.conf
apachectl configtest || exit
systemctl restart apache2

